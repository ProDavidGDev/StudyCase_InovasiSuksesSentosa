@model Study_Case_4.Models.AttendanceViewModel

@{
    ViewData["Title"] = "Input Absensi";
}

<h3>Input Data Absensi</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Attendance" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="control-label">NIK - Nama</label>
                <select asp-for="SelectedNik" class="form-control" asp-items="Model.EmployeeList">
                    <option value="">-- Pilih Karyawan --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TanggalAbsen" class="control-label">Tanggal Absen</label>
                <input asp-for="TanggalAbsen" type="date" class="form-control" />
                <span asp-validation-for="TanggalAbsen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>