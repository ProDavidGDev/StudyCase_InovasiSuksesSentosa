@model IEnumerable<Study_Case_4.Models.AttendanceRecordViewModel>

@{
    ViewData["Title"] = "Laporan Absensi";
}

<h3>@ViewData["Title"]</h3>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                NIK
            </th>
            <th>
                Nama
            </th>
            <th>
                Tanggal Absen
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NIK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama)
                </td>
                <td>
                    @item.TanggalAbsen.ToString("dd/MM/yyyy")
                </td>
            </tr>
        }
    </tbody>
</table>